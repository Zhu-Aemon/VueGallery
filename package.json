{
  "name": "gallery",
  "version": "1.0.0",
  "main": "electron/main.js",
  "private": true,
  "build": {
    "appId": "com.sersmile.gallery",
    "productName": "Gallery",
    "copyright": "Copyright Â© 2023 sersmile",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/assets/gallery.icns"
    },
    "win": {
      "icon": "src/assets/gallery.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "netease-cloud-music-api/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      "netease-cloud-music-api",
      "bin_darwin",
      "bin_win32"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:serve": "concurrently -k \"yarn dev\" \"yarn electron\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "body-parser": "^1.20.2",
    "cross-spawn": "^7.0.3",
    "howler": "^2.2.3",
    "markdown-it": "^13.0.1",
    "marked": "^4.3.0",
    "mitt": "^3.0.0",
    "music-metadata": "^8.1.4",
    "music-metadata-browser": "^2.5.9",
    "qrcode": "^1.5.1",
    "qrcodejs": "^1.0.0",
    "vite-plugin-commonjs": "^0.6.2",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vue-slider-component": "latest",
    "vuex": "next",
    "vuex-persistedstate": "^4.1.0",
    "which": "^3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^24.1.1",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.7",
    "tailwindcss": "^3.3.1",
    "vite": "^4.1.4",
    "vite-plugin-raw": "^1.0.3",
    "wait-on": "^7.0.1"
  }
}
